<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_background"
    tools:context=".Legal">

    <LinearLayout
        android:id="@+id/legalHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/legal_title"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/legalTermsAndConditions"
            android:textColor="@color/text_primary_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/legal_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:paddingTop="30dp"
            android:text="Return To Account"
            android:textColor="@color/text_primary_dark"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/youtube_web_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/story_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:background="@color/pastel_green"
        app:layout_constraintTop_toBottomOf="@+id/legalHeader">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/regTermsAndConditionsText" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>