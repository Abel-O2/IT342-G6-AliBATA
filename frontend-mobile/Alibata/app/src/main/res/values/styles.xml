<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChildFriendlyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/pastel_blue</item>
        <item name="colorPrimaryVariant">@color/pastel_green</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="PastelButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/pastel_pink</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="PastelInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/pastel_blue</item>
        <item name="hintTextColor">@color/pastel_green</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>